{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./src",
    "noUnusedLocals": true,
    "allowJs": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": [
        "modules/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@shared/*": [
        "shared/*"
      ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "jest.config.js",
    "prettier.config.js",
    "dist/*"
  ],
  "include": [
    "./src/**/*",
    "trash/JobsProvider",
    "trash/TransactionProvider",
    "trash/PaymentProvider"
  ]
}
